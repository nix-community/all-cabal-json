name:                streaming-utils
version:             0.1.0.0
synopsis:            utilities for http-client, attoparsec, pipes etc with streaming and streaming-bytestring
description:         Experimental http-client, attoparsec and pipes utilities streaming and streaming-bytestring

license:             BSD3
license-file:        LICENSE
author:              michaelt
maintainer:          what_is_it_to_do_anything@yahoo.com
-- copyright:           
category:            Data
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Data.Attoparsec.ByteString.Streaming,
                       Data.ByteString.Streaming.HTTP,
                       Streaming.Pipes
  -- other-modules:       
  other-extensions:    CPP, Trustworthy
  
  build-depends:       base >=4.6 && <4.9, 
                       transformers >=0.4 && <0.5, 
                       mtl >=2.2 && <2.3,
                       attoparsec,
                       streaming > 0.1.0.15 && < 0.1.1,
                       streaming-bytestring > 0.1.0.5 && < 0.1.1,
                       bytestring, 
                       pipes >= 4.0 && < 4.2,
                       http-client >=0.2 && <0.5, 
                       http-client-tls <0.3
                       
                      
  -- hs-source-dirs:      
  default-language:    Haskell2010