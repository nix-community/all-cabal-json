-- Initial geni-util.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                geni-util
version:             0.25.0.1
synopsis:            Companion tools for use with the GenI surface realiser
description:
  Tools included:
  .
  * client - sends all test cases from a GenI suite to geniserver, and saves
             results in the same format as batch mode GenI
  .
  * report - generates an HTML summary of a GenI batch operation
homepage:            http://kowey.github.io/GenI
license:             GPL-2
license-file:        LICENSE
author:              Eric Kow
maintainer:          eric.kow@gmail.com
-- copyright:           
category:            Natural Language Processing
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10
data-files:   jquery-1.6.2.min.js
          ,   jquery.tablesorter.min.js
          ,   asc.gif
          ,   bg.gif
          ,   desc.gif
          ,   report.css

library
  exposed-modules:    NLP.GenI.Client
                 ,    NLP.GenI.Report
  build-depends:      base < 5
               ,      bytestring
               ,      HTTP
               ,      directory
               ,      filepath
               ,      GenI         >= 0.24.2 && < 0.26
               ,      geniserver
               ,      io-streams   == 1.4.*
               ,      http-streams == 0.8.*
               ,      json         < 0.10
               ,      text
               ,      blaze-html
               ,      blaze-markup
  other-modules:
                      Paths_geni_util
  default-language:    Haskell2010


executable geni-util
  main-is:             Main.hs
  hs-source-dirs:      geni-util-cmd
  other-modules:       Report
               ,       Client
               ,       Config
               ,       Paths_geni_util
  -- other-extensions:    
  build-depends:       base
               ,       bytestring
               ,       cmdargs
               ,       directory
               ,       filepath
               ,       geni-util
               ,       GenI
               ,       json
               ,       text
  default-language:    Haskell2010
