    , base64-bytestring == 1.0.*
    , bifunctors >= 4.0
    , byteable == 0.1.*
    , cryptonite >= 0.7
    , data-default-class
    , lens >= 4.3
    , memory >= 0.7
    , mtl >= 2
    , template-haskell >= 2.4
    , safe >= 0.3
    , semigroups >= 0.15
    , aeson >= 0.8.0.1
    , unordered-containers == 0.2.*
    , bytestring == 0.10.*
    , text >= 1.1
    , time >= 1.5
    , network-uri >= 2.6
    , QuickCheck >= 2
    , quickcheck-instances
    , x509 >= 1.4
    , vector

  ghc-options:    -Wall
  hs-source-dirs: src

