Name:                 nemesis-titan
Version:              2013.6.22
Build-type:           Simple
Synopsis:             A collection of Nemesis tasks to bootstrap a Haskell project with a focus on continuous integration
Description:          

License:              BSD3
License-file:         LICENSE
Author:               Jinjing Wang
Maintainer:           Jinjing Wang <nfjinjing@gmail.com>
Build-Depends:        base
Cabal-version:        >= 1.2
category:             Web
homepage:             http://github.com/nfjinjing/nemesis-titan
data-files:           readme.md
                    , changelog.md
                    , known-issues.md
                    , Nemesis
                    , src/Main.hs
                    , vendor/Nemesis
                    , vendor/post-receive

library
  ghc-options: -Wall
  build-depends:      base >= 4 && < 100
                    , nemesis
                    , air
                    , uuid
                    , random
                    , directory
                    , bytestring
                    , filepath
                    , HStringTemplate
                    , hspec
                      
  hs-source-dirs: src/
  exposed-modules:  
                      System.Nemesis.Titan
