copyright:           Copyright: (c) 2016 Gregory W. Schwartz
category:            Bioinformatics
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Types
                     , EnsemblConvert
                     , HUGOConvert
                     , UniProtConvert
  build-depends:       base >= 4.7 && < 5
                     , containers
                     , bytestring
                     , text
                     , aeson
                     , lens
                     , lens-aeson
                     , wreq
                     , HTTP
                     , safe

  ghc-options:         -O2
  default-language:    Haskell2010

executable convert-annotation
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -O2
  build-depends:       base
                     , convert-annotation
                     , optparse-generic
                     , bytestring
                     , text
                     , cassava
                     , pipes
                     , pipes-bytestring
                     , pipes-csv
                     , lens
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/GregorySchwartz/convert-annotation
