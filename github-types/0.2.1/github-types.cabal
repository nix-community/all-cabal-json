name:                github-types
version:             0.2.1
license:             OtherLicense
license-file:        LICENSE
author:              Tomas Carnecky
maintainer:          tomas.carnecky@gmail.com
category:            GitHub
build-type:          Simple
cabal-version:       >= 1.10

synopsis:            Type definitions for objects used by the GitHub v3 API
description:         This package includes (some) type definitions for objects
                     which are consumed or produced by the GitHub v3 API.


source-repository head
    type:     git
    location: git://github.com/wereHamster/github-types.git


library
    default-language:    Haskell2010
    hs-source-dirs:      src

    build-depends:
       base >= 4 && < 5
     , aeson
     , text
     , time

    exposed-modules:
       GitHub.Types
     , GitHub.Types.Base
     , GitHub.Types.Repository
     , GitHub.Types.Events


test-suite spec
    default-language:    Haskell2010
    hs-source-dirs:      test src

    main-is:             Test.hs
    type:                exitcode-stdio-1.0

    build-depends:
       base >= 4 && < 5
     , hspec
     , aeson
     , aeson-pretty
     , smallcheck
     , hspec-smallcheck
     , vector
     , text
     , unordered-containers
     , time
     , http-conduit
