build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs: src/
  exposed-modules:
    System.Log.Raven.Scotty
  build-depends:
    base ==4.*,
    raven-haskell,
    scotty, wai, case-insensitive,
    bytestring, text,
    mtl
  extensions: CPP
