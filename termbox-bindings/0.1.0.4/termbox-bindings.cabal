name:                termbox-bindings
version:             0.1.0.4
synopsis:            Bindings to the Termbox library
description:         Bindings to the Termbox library.
homepage:            https://github.com/luciferous/termbox-bindings
license:             BSD3
license-file:        LICENSE
author:              Neuman Vong
maintainer:          neuman.vong@gmail.com
-- copyright:           
category:            Text
build-type:          Simple
cabal-version:       >=1.10

source-repository head
  type:              git
  location:          git://github.com/luciferous/termbox-bindings.git

executable example
  default-language:    Haskell2010
  ghc-options:         -Wall
  build-depends:       base >=4.6 && <4.9
                     , termbox-bindings
  main-is:             Example.hs
  c-sources:           .termbox/src/termbox.c, .termbox/src/utf8.c

library
  default-language:    Haskell2010
  ghc-options:         -Wall
  exposed-modules:     Termbox, Termbox.C, Termbox.Enums
  -- other-modules:
  -- other-extensions:    
  build-depends:       base >=4.6 && <4.9
  hs-source-dirs:      src
  build-tools:         c2hs
  install-includes:    termbox.h
  include-dirs:        .termbox/src
  c-sources:           .termbox/src/termbox.c, .termbox/src/utf8.c
  includes:            termbox.h
