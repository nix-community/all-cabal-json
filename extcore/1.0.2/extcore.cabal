name:                extcore
version:             1.0.2
synopsis:            Libraries for processing GHC Core
description:         Libraries for processing GHC Core
category:            Language
license:             BSD3
license-file:        LICENSE
author:              Andrew Tolmach, Tim Chevalier, The GHC Team
maintainer:          Tim Chevalier <chevalier@alum.wellesley.edu>
stability:           beta
tested-with:         GHC==6.10.4, GHC==6.12.2, GHC==6.10.1, GHC ==6.8.2, GHC==7.0.1, GHC ==7.6.2
data-files:          README, CHANGES, base-library.dpatch, integer-simple-library.dpatch, simple_io.dpatch, extcore_build.mk
extra-source-files:  Driver.hs
build-type:          Simple
cabal-version:       >=1.6
Library {
  exposed-modules:     Language.Core.Check, Language.Core.Core, Language.Core.Interp, Language.Core.ParsecParser, Language.Core.Prep, Language.Core.Prims, Language.Core.Printer, Language.Core.DebugPrinter, Language.Core.Merge, Language.Core.ElimDeadCode, Language.Core.Encoding, Language.Core.Env, Language.Core.CoreUtils, Language.Core.Parser, Language.Core.ParseGlue, Language.Core.Dependencies
  other-modules:       Language.Core.PrimCoercions, Language.Core.PrimEnv, Language.Core.Utils, Language.Core.Environments, Language.Core.Lex
  extensions:          DeriveDataTypeable PatternGuards RankNTypes ScopedTypeVariables CPP

  build-depends:       base >= 4 && < 5, containers, directory, filepath, mtl, parsec, pretty, array, bytestring

  if impl(ghc >= 6.12.1) {
     ghc-options: -Wall -fno-warn-unused-do-bind
  }
  else {
     ghc-options: -Wall
  }


  if impl(ghc > 6.8.2) {
     build-depends:syb
  }
  else {
     extensions: PatternSignatures
  }

}
source-repository head
  type:     darcs
  location: http://community.haskell.org/~tim/extcore
