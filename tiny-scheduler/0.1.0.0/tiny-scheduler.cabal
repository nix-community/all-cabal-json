name:                tiny-scheduler
version:             0.1.0.0
x-revision: 1
synopsis:            tiny no-brainer job scheduler
description:         this is a tiny library to make scheduling jobs to run predermined intervals easier
homepage:            https://github.com/functor-soup/tiny-scheduler#readme
license:             BSD3
license-file:        LICENSE
author:              Functor soup
maintainer:          functor.soup@gmail.com
copyright:           None
category:            utility
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Jobs, SubJobs, Time
  build-depends:       base >= 4.7 && < 5, async, time
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/functor-soup/tiny-scheduler
