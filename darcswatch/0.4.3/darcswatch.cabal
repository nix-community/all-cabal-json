                        , Darcs.Watch.UpdateRepoData
                        , Darcs.Watch.Storage
                        , Darcs.Watch.Mail
        Build-Depends:  base > 3 && < 4
                        , network
                        , HTTP >= 4000
                        , old-time
                        , Crypto
                        , parsec
                        , containers
                        , xhtml
                        , unix
                        , directory
                        , nano-md5
                        , zlib
                        , filepath
                        , bytestring
                        , concurrentoutput
                        , time
                        , old-locale
                        , process
                        , mime-string
                        , regex-compat
                        , cgi
                        , mtl
