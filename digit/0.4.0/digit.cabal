                    Data.Digit.DigitE
                    Data.Digit.Digitf
                    Data.Digit.DigitF


test-suite doctests
  type:
                    exitcode-stdio-1.0

  main-is:
                    doctests.hs

  default-language:
                    Haskell2010

  build-depends:
                    base < 5 && >= 4.8
                    , doctest >= 0.9.7
                    , filepath >= 1.3
                    , directory >= 1.1
                    , QuickCheck >= 2.0
                    , template-haskell >= 2.8
                    , parsec >= 3.1
                    
  ghc-options:
                    -Wall
                    -threaded

  hs-source-dirs:
                    test
