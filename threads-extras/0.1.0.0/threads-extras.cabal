name: threads-extras
version: 0.1.0.0
cabal-version: >=1.10
build-type: Simple
license: BSD3
license-file: LICENSE
copyright: 2016 Author name here
maintainer: example@example.com
homepage: https://github.com/githubuser/threads-extras#readme
synopsis: Initial project template from stack
description:
    Please see README.md
category: Web
author: Author name here

source-repository head
    type: git
    location: https://github.com/skedgeme/threads-extras

library
    exposed-modules:
        Control.Concurrent.Thread.BoundedThreadGroup
    build-depends:
        base >=4.7 && <5,
        threads >=0.5.1.4 && <0.6,
        stm >=2.4.4.1 && <2.5
    default-language: Haskell2010
    hs-source-dirs: src
    ghc-options: -Wall

test-suite threads-extras-test
    type: exitcode-stdio-1.0
    main-is: Spec.hs
    build-depends:
        base >=4.8.2.0 && <4.9,
        threads-extras >=0.1.0.0 && <0.2
    default-language: Haskell2010
    hs-source-dirs: test
    ghc-options: -threaded -rtsopts -with-rtsopts=-N
