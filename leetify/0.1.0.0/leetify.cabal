name:                leetify
version:             0.1.0.0
synopsis:            Leetify text
description:         Leetify a string from the command line interface and
                     output it on stdout
license:             BSD3
license-file:        LICENSE
author:              Dimitri Sabadie
maintainer:          Dimitri Sabadie <dimitri.sabadie@gmail.com>
category:            Text

build-type:          Simple
cabal-version:       >=1.10

data-files:           README.md

executable leetify
  main-is:             Main.hs

  build-depends:       base       >= 4.5 && < 4.8
                     , containers >= 0.5 && < 0.6

  hs-source-dirs:      src

  default-language:    Haskell2010
