cabal-version: >=1.10
name: leapseconds
version: 1.0
x-revision: 1
category: Time
description: Interpretation of leap second files.
author: Ashley Yakeley
license: BSD3
license-file: LICENSE
maintainer: ashley@semantic.org
copyright: 2016 Ashley Yakeley
build-type: Simple

source-repository head
    type: git
    location: https://github.com/AshleyYakeley/leapseconds

library
    hs-source-dirs: src
    exposed-modules:
        Data.Time.Clock.LeapSeconds
    build-depends:
        base >= 4.8 && < 5,
        time >= 1.7
    default-language: Haskell2010
    default-extensions:
    ghc-options: -Wall

test-suite test
    type: exitcode-stdio-1.0
    hs-source-dirs: test
    build-depends:
        base,
        time,
        tasty,
        tasty-hunit,
        leapseconds
    default-language: Haskell2010
    default-extensions:
        StandaloneDeriving
    ghc-options: -Wall
    main-is: Test.hs
    other-modules:
