Library
  Build-Depends:
    accelerate >=1.0 && <1.2,
    utility-ht >=0.0.8 && <0.1,
    base >=4.5 && <4.11

  GHC-Options:      -Wall -fwarn-missing-import-lists
  Hs-Source-Dirs:   src
  Default-Language: Haskell98
  Exposed-Modules:
    Data.Array.Accelerate.Utility.Lift.Acc
