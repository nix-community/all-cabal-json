  if impl(ghc < 7.4)
     build-depends:   directory >= 1.0.1.2 && < 1.1.0.2
                      , aws >= 0.3.1
                      , haskell98 >= 1.1.0.0 && < 2.0.0.0
                      , unix >= 2.5.0.0 && < 2.5.1.0
                      , bytestring == 0.9.*
                      , utf8-string == 0.3.*
                      , text >= 0.11
                      , filepath >= 1.1 && < 1.4
                      , random == 1.0.0.3
                      , HDBC >= 2.3.0.0
                      , http-conduit >= 1.2.0
  if impl(ghc > 7.2)
     build-depends:   directory >= 1.1.0.2
                      , aws >= 0.4.0.1
                      , unix >= 2.5.1.0
                      , utf8-string >= 0.3.7
                      , text >= 0.11.1.13
                      , filepath >= 1.3 && < 1.4
                      , random == 1.0.1.1
                      , HDBC >= 2.3.1.1
                      , http-conduit >= 1.2.1
                 
