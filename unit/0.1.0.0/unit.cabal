name:                unit
version:             0.1.0.0
synopsis:            Aliases for ().
description:         Please see README.md
homepage:            http://github.com/cxfreeio/unit#readme
license:             BSD3
license-file:        LICENSE
author:              Andrew Mohrland
maintainer:          cxfreeio@gmail.com
copyright:           2015 Andrew Mohrland
category:            Data
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Unit
  build-depends:       base >= 4.7 && < 5
  default-language:    Haskell2010

test-suite unit-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , unit
                     , hspec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/cxfreeio/haskell-unit
