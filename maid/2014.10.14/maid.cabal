Name:                 maid
Version:              2014.10.14
Build-type:           Simple
Synopsis:             A simple static web server
Description:

    Serve files from the current path

License:              BSD3
License-file:         LICENSE
Author:               Jinjing Wang
Maintainer:           Jinjing Wang <nfjinjing@gmail.com>
Build-Depends:        base
Cabal-version:        >= 1.2
category:             Web
homepage:             https://github.com/nfjinjing/maid
data-files:           readme.md, changelog.md, known-issues.md, Nemesis

Executable            maid
  ghc-options:        -threaded
  build-depends:      base >= 4 && < 100
                    , air >= 2014.5.19
                    , air-th
                    , hack2 >= 2012.1.19
                    , hack2-contrib >= 2012.1.19.1
                    , data-default
                    , hack2-handler-snap-server >= 2012.1.19
                    , containers
                    , moe >= 2011.6
                    , bytestring
                    , directory
                    , text
                    , process
                    , filepath
  hs-source-dirs:     src/
  main-is:            maid.hs
  Other-Modules:      Web.Maid.ApacheMimeTypes
                      Web.Maid.DefaultCSSStyle
