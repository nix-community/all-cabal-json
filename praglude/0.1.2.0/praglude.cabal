name: praglude
version: 0.1.2.0
synopsis: A pragmatic Prelude
description: An opinionated alternative Prelude, focused on practicality.
homepage: https://github.com/tdammers/praglude
license: BSD3
license-file: LICENSE
author: Tobias Dammers
maintainer: tdammers@gmail.com
copyright: 2016 Tobias Dammers
category: Web
build-type: Simple
-- extra-source-files:
cabal-version: >=1.10

library
  hs-source-dirs: src
  exposed-modules: Praglude
  build-depends: base >= 4.7 && < 5
               , aeson
               , bytestring
               , base64-bytestring
               , casing
               , containers
               , data-default
               , deepseq
               , directory
               , filepath
               , hashable
               , lens
               , template-haskell
               , mtl
               , random
               , semigroups
               , string-convert
               , text
               , time
               , unordered-containers
               , vector
  default-language: Haskell2010

source-repository head
  type: git
  location: https://github.com/tdammers/praglude
