      , pipes-bytestring >=2.1.0
      , pipes-text >= 0.0.0.10
      , pipes-group >= 1.0.1
      , pipes-attoparsec >= 0.5
      , pipes-transduce >= 0.3.3.0
      , exceptions >= 0.6.0 
      , semigroups >= 0.15 
