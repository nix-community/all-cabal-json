name:                twill
version:             0.1.0.3
synopsis:            Twilio API interaction
description:         A little Twilio library
license:             MIT
license-file:        LICENSE
author:              Joseph Abrahamson <me@jspha.com>
maintainer:          Joseph Abrahamson <me@jspha.com>
copyright:           2012 Joseph Abrahamson, Reify Health LLC
category:            Service
build-type:          Simple
cabal-version:       >=1.8

library
  hs-source-dirs:    src
  exposed-modules:
    Service.Twilio,
    Service.Twilio.Types
  build-depends:       
    base == 4.5.*,
    QuickCheck >= 2.4.0,
    errors >= 1.3.1,
    text >= 0.11.2,
    bytestring >= 0.9.2,
    base16-bytestring >= 0.1.1,
    base64-bytestring >= 1.0.0,
    datetime >= 0.2.1,
    old-locale >= 1.0.0,
    time >= 1.4,
    attoparsec >= 0.10.2,
    aeson >= 0.6.0,
    cryptohash >= 0.7.5,
    data-default >= 0.5.0
  ghc-options: -Wall

source-repository head
  type:     git
  location: git://github.com/reifyhealth/twill.git