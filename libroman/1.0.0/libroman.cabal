library
  hs-source-dirs:      src
  exposed-modules:     Roman.Encode
                     , Roman.Decode
  build-depends:       base >= 4.7 && < 5
  default-language:    Haskell2010

test-suite libroman-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , word8
                     , QuickCheck
                     , libroman
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
