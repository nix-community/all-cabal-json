name:                libroman
version:             2.0.0
synopsis:            arabic to roman numeral conversions
description:         This is a Haskell thing that turns numbers into Roman numerals
homepage:            https://ahakki.xyz
license:             BSD3
license-file:        LICENSE
author:              Alexander Hakki
maintainer:          ahakki@ahakki.xyz
copyright:           2016 Alexander Hakki
category:            romans
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Roman
  build-depends:       base >= 4.7 && < 5
                     , split
  default-language:    Haskell2010

test-suite libroman-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , QuickCheck
                     , libroman
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/ahakki/libroman.git
