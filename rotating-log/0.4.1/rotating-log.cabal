name:                rotating-log
version:             0.4.1
description:         Size-limited, concurrent, automatically-rotating log writer.
Synopsis:            Size-limited, concurrent, automatically-rotating log writer.
license:             BSD3
license-file:        LICENSE
author:              Ozgun Ataman, Doug Beardsley
maintainer:          doug.beardsley@soostone.com
copyright:           Soostone Inc
category:            Logging
build-type:          Simple
cabal-version:       >= 1.8
homepage:            http://github.com/Soostone/rotating-log

extra-source-files:
  README.md
  changelog.md

library
  hs-source-dirs: src

  exposed-modules:
    System.RotatingLog

  build-depends:
    base               >= 4    && < 5,
    bytestring         >= 0.8,
    time               >= 1.5 && < 1.7,
    old-locale         >= 1.0,
    time-locale-compat,
    filepath           >= 1.0,
    directory          >= 1.0

  ghc-options: -Wall -fwarn-tabs

test-suite test-rotate
  type: exitcode-stdio-1.0
  main-is: TestRotate.hs
  ghc-options: -Wall
  hs-source-dirs: test, src
  build-depends:
    base,
    bytestring,
    time,
    filepath,
    directory

  ghc-options: -Wall -fwarn-tabs -threaded
