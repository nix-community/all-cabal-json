                     , Cabal                     >= 2.0  && < 2.1
                     , haskell-tools-ast         >= 1.0  && < 1.1
                     , haskell-tools-backend-ghc >= 1.0  && < 1.1
                     , haskell-tools-rewrite     >= 1.0  && < 1.1
                     , haskell-tools-prettyprint >= 1.0  && < 1.1
