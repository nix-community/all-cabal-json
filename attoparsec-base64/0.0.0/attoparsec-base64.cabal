name:                attoparsec-base64
version:             0.0.0
synopsis:            Fetch only base64 characters, erroring in the attoparsec monad on failure
-- description:
homepage:            https://github.com/athanclark/attoparsec-base64#readme
license:             BSD3
license-file:        LICENSE
author:              Athan Clark
maintainer:          Athan Clark <athan.clark@gmail.com>
copyright:           2017 Athan Clark
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Attoparsec.Text.Base64
                       Data.Attoparsec.ByteString.Base64
  build-depends:       base >= 4.7 && < 5
                     , attoparsec
                     , bytestring
                     , text
                     , word8
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/athanclark/attoparsec-base64
