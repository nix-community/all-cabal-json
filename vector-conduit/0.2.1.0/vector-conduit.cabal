name:                vector-conduit
version:             0.2.1.0
synopsis:            Conduit utilities for vectors
description:         Provides sources and sinks for vectors.
license:             GPL-3
license-file:        LICENSE
author:              Jared Hance
maintainer:          jaredhance@gmail.com
-- copyright:           
category:            Data
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:
    Data.Vector.Conduit
  build-depends:
    base >= 4.0 && < 5.0,
    conduit >= 0.2 && < 0.3,
    primitive >= 0.4 && < 0.5,
    transformers >= 0.2 && < 0.3,
    vector >= 0.9 && < 0.10

test-suite vector-conduit-tests
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs: test/
  build-depends:
    vector-conduit,
    base >= 4.0 && < 5.0,
    conduit >= 0.2 && < 0.3,
    test-framework >= 0.5 && < 0.6,
    test-framework-quickcheck2 >= 0.2 && < 0.3,
    QuickCheck >= 2.4 && < 2.5,
    vector >= 0.9 && < 0.10

source-repository head
  type: git
  location: git://github.com/jhance/vector-conduit.git
