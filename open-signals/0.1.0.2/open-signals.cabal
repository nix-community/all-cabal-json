name:                open-signals
version:             0.1.0.2
synopsis:            A mechanism similar to checked exceptions that integrates with MTL and
                     transformer stacks
description:         Please see Control.Monad.Signal.Class module.
license:             MIT
license-file:        LICENSE
author:              Luka Horvat
maintainer:          luka.horvat9@gmail.com
copyright:           2016 Luka Horvat
category:            Control
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Data.Union
                       Control.Monad.Signal
                       Control.Monad.Signal.Class
  build-depends:       base >= 4.7 && < 5
                     , transformers
                     , mtl
                     , either
  default-language:    Haskell2010

test-suite open-signals-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , open-signals
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://gitlab.com/LukaHorvat/open-signals
