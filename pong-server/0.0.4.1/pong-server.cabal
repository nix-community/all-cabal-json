name:                pong-server
version:             0.0.4.1
synopsis:            A simple embedded pingable server that runs in the background.
description:         A simple embedded pingable server that runs in the background. Details in the README on GitHub.
homepage:            http://github.com/RobertFischer/pong-server#readme
license:             PublicDomain
license-file:        UNLICENSE
author:              Robert Fischer
maintainer:          smokejumperit+pong-server@gmail.com
copyright:           2017 Robert Fischer
category:            utilities
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Network.Pong
  build-depends:       base >= 4.9.1.0 && < 5
                     , network >= 2.6.3.1 && < 3
                     , classy-prelude >= 1.2.0.1 && < 2
                     , bytestring >= 0.10.8.1 && < 0.11
                     , http-types >= 0.9.1 && < 1 && < 0.10
                     , exceptions >= 0.8.3 && < 0.9
                     , monad-control >= 1.0.1.0 && < 2
  default-language:    Haskell2010
  ghc-options:         -Wall -O3 
  default-extensions:  OverloadedStrings
                     , AllowAmbiguousTypes
                     , Rank2Types
                     , FlexibleContexts

test-suite pong-server-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , pong-server
                     , hspec >= 2.2.2 && < 3
                     , QuickCheck >= 2.8.1 && < 3
                     , network >= 2.6.2.1 && < 2.7
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  default-extensions:  ScopedTypeVariables

source-repository head
  type:     git
  location: https://github.com/RobertFischer/pong-server
