Library
  Build-Depends:    base == 4.*
                  , hxt >=8.3 && < 9.1
                  , regular >= 0.2 && < 0.4
  
  HS-Source-Dirs:   src
  GHC-Options:      -Wall -fno-warn-orphans
  Exposed-Modules:  Generics.Regular.XmlPickler,
                    Generics.Regular.XmlPickler.Function,
                    Generics.Regular.XmlPickler.Instances
