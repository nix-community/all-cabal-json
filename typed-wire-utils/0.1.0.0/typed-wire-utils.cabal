name:                typed-wire-utils
version:             0.1.0.0
synopsis:            Haskell utility library required for code generated by typed-wire compiler
description:         Please see README.md
homepage:            http://github.com/typed-wire/hs-typed-wire-utils#readme
license:             BSD3
license-file:        LICENSE
author:              Alexander Thiemann
maintainer:          Alexander Thiemann <mail@athiemann.net>
copyright:           2015 Alexander Thiemann <mail@athiemann.net>
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Text.TypedWire
  build-depends:
                base >= 4.7 && < 5,
                aeson >= 0.8,
                bytestring >=0.10,
                text >=1.2,
                time >=1.5,
                base64-bytestring >=1.0
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/typed-wire/hs-typed-wire-utils
