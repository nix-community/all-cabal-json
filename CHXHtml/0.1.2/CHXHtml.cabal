Cabal-version:       >=1.2
Tested-With:         GHC ==6.10.3


Library
  -- Modules exported by the library.
  Exposed-modules:     Text.CHXHtml.XHtml1_strict
                       Text.CHXHtml.XHtml1_transitional
                       Text.CHXHtml.XHtml1_frameset
  
