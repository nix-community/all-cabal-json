name:                sqlcli-odbc
version:             0.2.0.1
synopsis:            ODBC specific definitions to be used by SQL CLI clients.
description:         Access databases through ODBC using SQLCLI compatible functions.
                     The package adds ODBC specific definition to the sqlcli package.
homepage:            https://hub.darcs.net/mihaigiurgeanu/sqlcli-odbc
license:             BSD3
license-file:        LICENSE
author:              Mihai Giurgeanu
maintainer:          mihai.giurgeanu@gmail.com
copyright:           2017 Mihai Giurgeanu
category:            Database
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     SQL.ODBC,
                       SQL.CLI.ODBC
  build-depends:       base >= 4.7 && < 5,
                       logging >= 3.0 && < 4,
                       sqlcli >= 0.2 && < 0.3
  default-language:    Haskell2010

source-repository head
  type:     darcs
  location: https://hub.darcs.net/mihaigiurgeanu/sqlcli-odbc
