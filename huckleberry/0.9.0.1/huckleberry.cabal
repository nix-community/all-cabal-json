name:                huckleberry
version:             0.9.0.1
synopsis:            IchigoJam BASIC expressed in Haskell.
description:         The EDSL Provides bridge between IchigoJam BASIC and Haskell.
license:             BSD3
license-file:        LICENSE
author:              Takamasa Mitsuji
maintainer:          tkms@mitsuji.org
-- copyright:           
category:            Language
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     IchigoJam, Language.Huckleberry.V10101
  -- other-modules:       
  other-extensions:    GADTs
  build-depends:       base >=4.7 && <4.8, bytestring >=0.10 && <0.11, serialport >=0.4 && <0.5, mtl >=2.1
  -- hs-source-dirs:      
  default-language:    Haskell2010


source-repository head
  type:     git
  location: https://github.com/mitsuji/huckleberry.git


test-suite test
  hs-source-dirs: test
  main-is: test_Huckleberry_V10101.hs
  type: exitcode-stdio-1.0
  build-depends:       base,
                       HUnit >= 1.2.0.0,
                       huckleberry
  default-language:    Haskell2010

