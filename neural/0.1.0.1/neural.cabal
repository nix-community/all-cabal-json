    type: exitcode-stdio-1.0
    main-is: doctest.hs
    build-depends:
        base >=4.7 && <5,
        doctest >=0.10.1 && <0.11,
        neural >=0.1.0.1 && <0.2
    default-language: Haskell2010
    hs-source-dirs: doctest
    ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N -fexcess-precision -optc-O3 -optc-ffast-math
