name:                wai-middleware-metrics
version:             0.2.4
synopsis:            A WAI middleware to collect EKG request metrics
description:         This WAI middleware counts the number of requests, the number of responses by status code and keeps a latency distribution.
                     .
                     It can be added to any WAI-based webserver, such as Yesod, Scotty, Spock and Servant.
                     .
                     The counters are EKG Counters from ekg-core. <https://ocharles.org.uk/blog/posts/2012-12-11-24-day-of-hackage-ekg.html>
license:             BSD3
license-file:        LICENSE
author:              Sebastian de Bellefon
maintainer:          arnaudpourseb@gmail.com
homepage:            https://github.com/Helkafen/wai-middleware-metrics
category:            Web
build-type:          Simple
cabal-version:       >=1.10
Tested-with:         GHC == 7.6.2, GHC == 7.6.3, GHC == 7.8.1, GHC == 7.8.2, GHC == 7.8.3, GHC == 7.8.4, GHC == 7.10.1, GHC == 7.10.2, GHC == 8.0.2

library
  exposed-modules:     Network.Wai.Metrics
  build-depends:       base >=4.6 && < 5
                     , ekg-core >= 0.1
                     , http-types >= 0.8
                     , text >= 1.2
                     , time >= 1.4
                     , wai >= 3.0.0
  default-language:    Haskell2010
  ghc-options:        -Wall

test-suite metrics-test
  build-depends:       base >=4.6 && < 5
                     , wai >= 3.0
                     , ekg-core >= 0.1
                     , wai-middleware-metrics
                     , tasty >= 0.10.1
                     , tasty-hunit >= 0.8
                     , tasty-quickcheck >= 0.8.2
                     , QuickCheck >= 2.7
                     , scotty >= 0.8.0
                     , transformers >= 0.3
                     , bytestring >= 0.10.0.2
                     , wai-extra >= 3.0.0
                     , http-types >= 0.8
                     , time >= 1.4
                     , text >= 1.2
  type:                exitcode-stdio-1.0
  main-is:             tests.hs
  default-language:    Haskell2010
  other-modules:       Network.Wai.Metrics

benchmark metrics-bench
  build-depends:       base
                     , criterion
                     , wai >= 3.0
                     , wai-middleware-metrics
                     , wai-extra >= 3.0.0
                     , scotty >= 0.8.0
                     , bytestring >= 0.10.0.2
                     , ekg-core >= 0.1
                     , http-types >= 0.8
                     , time >= 1.4
                     , text > 1.2
  type:                exitcode-stdio-1.0
  main-is:             Benchmark.hs
  default-language:    Haskell2010
  ghc-options:         -Wall -O2
  other-modules:       Network.Wai.Metrics

source-repository head
  type:     git
  location: git://github.com/Helkafen/wai-middleware-metrics.git
