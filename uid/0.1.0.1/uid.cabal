category:            Data
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Data.UID
  -- other-modules:       
  build-depends:       base >=4 && < 5,
                       aeson,
                       bytestring,
                       cereal,
                       dataenc,
                       text,
                       uuid

  hs-source-dirs:      src