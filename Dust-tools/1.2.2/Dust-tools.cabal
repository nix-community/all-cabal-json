    base >= 3 && < 5,
    Dust >= 2.2.2,
    bytestring,
    entropy,
    network,
    cereal,
    ghc-prim,
    binary,
    random,
    random-extras,
    random-source,
    random-fu,
    containers,
    directory,
    split
  Exposed-modules:
    Dust.Services.Replay.Replay

