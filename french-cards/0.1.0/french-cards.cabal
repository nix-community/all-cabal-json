name:                 french-cards
version:              0.1.0
synopsis:             French Playing Cards
description:          Please see README.md
homepage:             https://github.com/tserduke/french-cards#readme
bug-reports:          https://github.com/tserduke/french-cards/issues
license:              BSD3
license-file:         LICENSE
author:               Taras Serduke
maintainer:           taras.serduke@gmail.com
copyright:            2016 Taras Serduke
category:             Game
stability:            experimental
build-type:           Simple
cabal-version:        >= 1.10
extra-source-files:   README.md
                      changelog.md

source-repository head
  type:     git
  location: https://github.com/tserduke/french-cards


library
  hs-source-dirs:     src
  exposed-modules:    Game.FrenchCards
                      Game.FrenchCards.Card
                      Game.FrenchCards.Rank
                      Game.FrenchCards.Suit
  build-depends:      base < 5
  default-language:   Haskell2010
  default-extensions: GeneralizedNewtypeDeriving
  ghc-options:        -Wall


test-suite card
  type:               exitcode-stdio-1.0
  hs-source-dirs:     test
  main-is:            Card.hs
  build-depends:      base < 5,
                      french-cards,
                      HUnit
  default-language:   Haskell2010
  ghc-options:        -Wall

test-suite misc
  type:               exitcode-stdio-1.0
  hs-source-dirs:     test
  main-is:            Misc.hs
  build-depends:      base < 5,
                      french-cards,
                      hspec
  default-language:   Haskell2010
  ghc-options:        -Wall
