library
    exposed-modules:
        Zifter.Hlint
    build-depends:
        base >=4.9 && <=5,
        filepath >=1.4 && <1.5,
        hlint >=1.9.35 && <2.1,
        path -any,
        path-io -any,
        safe >=0.3 && <0.4,
        zifter >=0.0 && <0.1
    default-language: Haskell2010
    hs-source-dirs: src/
    ghc-options: -Wall

