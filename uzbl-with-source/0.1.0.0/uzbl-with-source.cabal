author:              Mateusz Kowalczyk
maintainer:          fuuzetsu@fuuzetsu.co.uk
-- copyright:
category:            Web, Uzbl
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Uzbl.WithSource
