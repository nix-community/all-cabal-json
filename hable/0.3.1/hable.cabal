name:                hable
version:             0.3.1
synopsis:            customizable pretty printer library for tables
description:         customizable pretty printer library for tables, e.g. using boxing characters
homepage:            https://github.com/mekeor/hable
license:             PublicDomain
license-file:        LICENSE
author:              Mekeor Melire
maintainer:          mekeor.melire@gmail.com
copyright:           Mekeor Melire
category:            Console
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:
    src
  exposed-modules:
    Hable
    Hable.BoxChar
    Hable.Config
    Hable.Style.Colored8
    Hable.Style.LineIndex
    Hable.Style.OrgMode
    Hable.Style.Unicode
  build-depends:
    base >= 4 && < 5
  default-language:
    Haskell2010
