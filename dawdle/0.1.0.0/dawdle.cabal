name:                dawdle
version:             0.1.0.0
synopsis:            Generates DDL suggestions based on a CSV file
-- description:         
homepage:            https://github.com/arnons1/dawdle
license:             MIT
license-file:        LICENSE
author:              Arnon Shimoni
maintainer:          arnon.shimoni@gmail.com
-- copyright:           
category:            Database
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

source-repository head
  type:     git
  location: https://github.com/arnons1/dawdle.git

library
  -- exposed-modules:     
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9,
                       parsec >= 3.1.8 && < 3.2,
                       pretty >= 1.0 && < 1.2,
                       text >= 0.11.1.13 && < 1.3,
                       time >= 1.4 && < 1.6
  hs-source-dirs:      src  
  default-language:    Haskell2010
  exposed-modules:     Database.Dawdle.Parser,
                       Database.Dawdle.Dawdle,
                       Database.Dawdle.PrettyPrint,
                       Database.Dawdle.Types,
                       Database.Dawdle.Options,
                       Database.Dawdle.Utils,
                       Paths_dawdle
  ghc-options:         -Wall -O3
executable dawdle
  main-is:             main.lhs
  other-modules:       Paths_dawdle
  hs-source-dirs:      bin
  default-language:    Haskell2010
  build-depends:       base >=4.8 && <4.9,
                       parsec >= 3.1.8 && < 3.2,
                       pretty >= 1.0 && < 1.2,
                       text >= 0.11.1.13 && < 1.3,
                       filepath >= 1.4.0.0,
                       dawdle == 0.1.0.0
  ghc-options:         -Wall -O3