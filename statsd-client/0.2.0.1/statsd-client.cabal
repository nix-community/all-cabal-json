name: statsd-client
version: 0.2.0.1
cabal-version: >=1.10
build-type: Simple
license: MIT
license-file: LICENSE
copyright: Â© Keith Duncan
maintainer: Keith Duncan
stability: experimental
homepage: https://github.com/keithduncan/statsd-client
bug-reports: https://github.com/keithduncan/statsd-client/issues
synopsis: Statsd UDP client
category: Network
author: Keith Duncan

source-repository head
  type: git
  location: https://github.com/keithduncan/statsd-client

library
  exposed-modules: Network.Statsd,
                   Network.Statsd.Cluster
  default-language: Haskell2010
  hs-source-dirs: src
  build-depends: base >= 4.8 && < 4.9
               , old-time >= 1.1 && <1.2
               , random >= 1.1 && <1.2
               , bytestring >= 0.10 && <0.11
               , byteable >= 0.1 && <0.2
               , cryptohash >= 0.11 && <0.12
               , network >= 2.6 && <2.7
               , network-uri >=2.6 && <2.7
               , digest-pure >= 0.0 && <0.1
               , time-units >= 1.0 && <1.1
               , crypto-api >= 0.13 && <0.14
               , DRBG >= 0.5 && <0.6
