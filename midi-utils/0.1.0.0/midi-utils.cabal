name:                midi-utils
version:             0.1.0.0
synopsis:            Utilities for working with MIDI data
description:         Utilities for working with MIDI data
homepage:            https://github.com/GuiltyDolphin/midi-utils
license:             GPL-3
license-file:        LICENSE
author:              Ben Moon
maintainer:          guiltydolphin@gmail.com
copyright:           (c) 2016 Ben Moon
category:            Sound
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10
data-files:
    -- sample MIDI
    data/samples/sample1.midi
source-repository head
  type: git
  location: git://github.com/guiltydolphin/midi-utils.git

library
  exposed-modules:     Sound.MIDI.Utils.LiftMap
                     , Sound.MIDI.Utils.Run
  -- other-modules:
  other-extensions:    FlexibleInstances, TypeSynonymInstances, MultiParamTypeClasses
  build-depends:       base >=4.8 && <4.9, bytestring >= 0.10.6.0, directory >=1.2 && <1.3, event-list >=0.1 && <0.2, midi >=0.2 && <0.3, parsec >=3.1 && <3.2, process >=1.2 && <1.3
  hs-source-dirs:      src
  default-language:    Haskell2010
