category:            Science

build-type:          Simple

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.8


library
  -- Modules exported by the library.
  exposed-modules: TBit.Types
                 , TBit.Plots
                 , TBit.Framework
                 , TBit.Parameterization
                 , TBit.Toolbox

                 , TBit.Systems.KagomeLattice
                 , TBit.Systems.HoneycombLattice
                 , TBit.Systems.SquareLattice

                 , TBit.Topological.Chern
                 , TBit.Topological.Curvature
                 , TBit.Topological.Spillage

                 , TBit.Magnetic.OrbitalMagnetization
                 , TBit.Electronic.Conductance

                 , TBit.Numerical.Derivative
                 , TBit.Numerical.Integration

                 , TBit.Hamiltonian.Eigenstates
                 , TBit.Hamiltonian.Builder.Decompactification
                 , TBit.Hamiltonian.Builder.PrimitiveLattice
                 , TBit.Hamiltonian.Builder.Matrification
                 , TBit.Hamiltonian.Builder.Terms
                 , TBit.Hamiltonian.Builder.Examples

