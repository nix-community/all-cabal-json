  location: git://github.com/ekmett/tagged-transformer.git

library
  build-depends: 
    base >= 4 && < 5,
    transformers >= 0.2.2 && < 0.3
  exposed-modules:
    Control.Monad.Trans.Tagged
  ghc-options: -Wall
