  hs-source-dirs:       src
  build-depends:        base >= 4.8 && < 5, Cabal >= 1.16.0, hexpat, timeit,
                        cmdargs, hashable, unordered-containers, time,
                        hostname, text, parsec, bytestring
  exposed-modules:      Test.HUnitPlus.Base
                        Test.HUnitPlus.Execution
