  exposed-modules:     Happybara.WebKit,
                       Happybara.WebKit.Commands,
                       Happybara.WebKit.Driver,
                       Happybara.WebKit.Exceptions,
                       Happybara.WebKit.Session
  other-modules:       Paths_happybara_webkit
