library
  exposed-modules:     Text.StringConvert
  -- other-modules:
  -- other-extensions:
  build-depends: base >=4.5 && <5.0
               , bytestring
               , text
               , utf8-string
  -- hs-source-dirs:
  default-language:    Haskell2010
test-suite tests
  build-depends: base >= 4.5 && <5.0
               , string-convert
               , tasty
               , tasty-hunit
               , bytestring
               , text
               , utf8-string
