-- Initial woot.cabal generated by cabal init.  For further documentation,
-- see http://haskell.org/cabal/users-guide/

name:                woot
version:             0.0.0.0
synopsis:            Real time group editor without operational transform.
description:         Without operation transform - WOOT.
homepage:            https://github.com/TGOlson/woot-haskell
license:             MIT
license-file:        LICENSE
author:              Tyler Olson
maintainer:          tydotg@gmail.com
-- copyright:
category:            Data
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10


Source-repository head
    Type:     git
    Location: https://github.com/TGOlson/woot-haskell


library
  exposed-modules:     Data.Woot
                     , Data.Woot.Core
                     , Data.Woot.Operation
                     , Data.Woot.WChar
                     , Data.Woot.WString
                     , Data.Woot.WString.Builder

  -- other-modules:
  default-extensions:  TupleSections

  build-depends:       base <5.0
                     , vector
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite test
  hs-source-dirs:      spec
  main-is:             Spec.hs
  ghc-options:         -Wall
  type:                exitcode-stdio-1.0
  build-depends:       base <5.0
                     , hspec >=2.1 && <2.2
                     , woot

  default-language:    Haskell2010
