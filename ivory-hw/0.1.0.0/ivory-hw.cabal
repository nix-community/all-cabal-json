                       Ivory.HW.STM32F4,
                       Ivory.HW.Machine,
                       Ivory.HW.Prim,
                       Paths_ivory_hw,
                       ExampleTypes
  hs-source-dirs:      src, examples
  build-depends:       base ==4.6.*,
                       filepath,
                       ivory,
                       ivory-bitdata,
                       ivory-backend-c
  default-language:     Haskell2010
  ghc-options:         -Wall


