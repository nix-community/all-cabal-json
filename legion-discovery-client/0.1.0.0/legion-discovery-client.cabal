name:                legion-discovery-client
version:             0.1.0.0
synopsis:            Client library for communicating with legion-discovery.
description:         Please see README.md
homepage:            https://github.com/owensmurray/legion-discovery-client#readme
license:             Apache-2.0
license-file:        LICENSE
author:              Rick Owens
maintainer:          rick@owensmurray.com
copyright:           2016 Rick Owens
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:
    src
  exposed-modules:
    Network.Legion.Discovery.Client
  build-depends:
    Cabal >= 1.22.5.0 && < 1.25,
    aeson >= 0.11.2.1 && < 0.12,
    base >= 4.7 && < 5,
    bytestring >= 0.10.6.0 && < 0.11,
    containers >= 0.5.6.2 && < 0.6,
    data-default-class >= 0.0.1 && < 0.2,
    http-client >= 0.4.31.1 && < 0.5,
    http-types >= 0.9.1 && < 0.10,
    load-balancing >= 1.0 && < 1.1,
    network >= 2.6.3.1 && < 2.7,
    text >= 1.2.2.1 && < 1.3
  default-language:
    Haskell2010

test-suite legion-discovery-client-test
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    test
  main-is:
    Spec.hs
  build-depends:
    base,
    legion-discovery-client
  ghc-options:
    -threaded -rtsopts -with-rtsopts=-N
  default-language:
    Haskell2010

source-repository head
  type:     git
  location: https://github.com/owensmurray/legion-discovery-client
