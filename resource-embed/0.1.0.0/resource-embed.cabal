name:                resource-embed
version:             0.1.0.0
synopsis:            Embed data files via C and FFI.
description:         Compiles data files into C code and generates some FFI wrapper code to integrate them into Haskell projects.
homepage:            https://bitbucket.org/tdammers/resource-embed
license:             MIT
license-file:        LICENSE
author:              Tobias Dammers
maintainer:          tdammers@gmail.com
-- copyright:           
category:            Development
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable resource-embed
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends: base >=4.5 && <5.0
               , bytestring >=0.9 && <1.0
               , directory >=1.1 && <2.0
  hs-source-dirs:      src
  default-language:    Haskell2010
