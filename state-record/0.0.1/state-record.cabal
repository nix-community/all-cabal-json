
name: state-record
version: 0.0.1
cabal-version: -any
build-type: Simple
license: GPL
license-file: LICENSE
copyright: (c) 2011 Karl Voelker
build-depends: base >= 3 && < 5, mtl -any, template-haskell -any
stability: unstable
homepage: https://github.com/ktvoelker/state-record
