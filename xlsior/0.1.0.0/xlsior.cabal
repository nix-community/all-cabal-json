library
  exposed-modules:     Xlsx.Writer, Xlsx.Sheet, Xlsx.Parse, Xlsx.Types
  other-modules:       Xlsx.Types.Internal, Xlsx.Types.Class, Xlsx.Types.Instances
  other-extensions:    OverloadedStrings
