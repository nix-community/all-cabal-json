source-repository head
  type:      git
  location:  git://github.com/nh2/iso8601-time.git


library
  exposed-modules: Data.Time.ISO8601
  build-depends:   base < 5, old-locale == 1.0.*, time < 1.5 
  hs-source-dirs:  src
  ghc-options:     -Wall
