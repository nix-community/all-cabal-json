author:         Geoffrey Mainland <mainland@cs.drexel.edu>
maintainer:     Geoffrey Mainland <mainland@cs.drexel.edu>
stability:      alpha
bug-reports:    https://github.com/mainland/exception-mtl/issues
category:       Control, Monad, Error Handling, Failure
synopsis:       Exception monad transformer instances for mtl classes.
description:    This package provides exception monad transformer instances for
                the classes defined by mtl.

build-type:     Simple

library
  default-language: Haskell98

  exposed-modules:
    Control.Monad.Exception.Instances

  build-depends:
    base                   >= 4   && < 5,
    exception-transformers >= 0.3 && < 0.5,
    mtl                    >= 2.0 && < 5.0,
    transformers           >= 0.2 && < 0.5

  ghc-options:
    -Wall

source-repository head
  type:     git
  location: git://github.com/mainland/exception-mtl.git
