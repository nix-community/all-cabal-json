                     filepath, containers, text, monadloc, mtl >= 2.2.1,
                     bytestring, deepseq, system-filepath, text-format,
                     directory, attoparsec, mime-types, syb, parsec, process

  hs-source-dirs:    src
  ghc-options:       -fwarn-incomplete-patterns

