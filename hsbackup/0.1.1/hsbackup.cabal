-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.6

Executable hsbackup
  main-is: main.hs
  other-modules: Config
  build-depends: base < 5, hashed-storage, cmdargs, strict,
                 bytestring, filepath, directory,
                 time, old-locale

