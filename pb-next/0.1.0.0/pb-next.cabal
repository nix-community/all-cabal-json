name:                pb-next
version:             0.1.0.0
synopsis:            Utility CLI for working with protobuf files
description:         `pb-next` is a CLI for generating "next" protocol buffer field values.
homepage:            https://github.com/githubuser/pb-next#readme
license:             BSD3
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     ProtoParser, Proto, PbAnalyser, Tree
  build-depends:       base >= 4.7 && < 5
                     , text
                     , parsec
                     , either
                     , transformers
  default-language:    Haskell2010

executable pbhelp
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , pb-next
                     , either
                     , text
                     , optparse-applicative
                     , data-default
  default-language:    Haskell2010

test-suite pb-next-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , pb-next
                     , tasty
                     , tasty-hunit
                     , parsec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/pb-next
