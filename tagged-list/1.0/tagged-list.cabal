                     type-level-natural-number >= 1.0 && < 1.2,
                     type-level-natural-number-induction >= 1.0 && < 1.1,
                     type-level-natural-number-operations >= 1.0 && < 1.1,
                     natural-number >= 1.0 && < 1.1,
                     AbortT-transformers >= 1.0 && < 1.1,
                     binary >= 0.5 && < 0.6
