Name:             salvia
Version:          0.1
Description:      Lightweight Haskell Web Server Framework
Synopsis:         Lightweight Haskell Web Server Framework 
Category:         Network, Web
License:          BSD3
License-file:     LICENSE
Author:           Sebastiaan Visser
Maintainer:       sfvisser@cs.uu.nl
Build-Type:       Simple
Build-Depends:    base,
                  bimap,
                  bytestring,
                  containers,
                  directory,
                  pureMD5 == 0.2.4,
                  fclabels ==0.1,
                  encoding,
                  filepath,
                  mtl ==1.1.0.2,
                  network,
                  old-locale,
                  parsec ==3.0.0,
                  process,
                  random,
                  stm,
                  time,
                  utf8-string
GHC-Options:      -threaded -Wall -fno-warn-orphans
Extensions:       CPP
HS-Source-Dirs:   src
