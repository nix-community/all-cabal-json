name:                yeller
version:             0.1.0.2
synopsis:            A Yeller Client For Haskell
-- description:
homepage:            http://yellerapp.com
license:             MIT
license-file:        LICENSE
author:              Tom Crayford
maintainer:          clients@yellerapp.com
-- copyright:
category:            Control
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Network.Yeller, Network.Yeller.Internals
  -- other-modules:
  -- other-extensions:
  build-depends:
          base >= 4.6.0 && < 5
        , text >= 1.1.1.0
        , bytestring >= 0.10.4.0
        , stm
        , containers
        , unordered-containers >= 0.2.3.0
        , aeson >= 0.6.0
        , network >= 2.0
        , http-client >= 0.4.0
        , http-client-tls >= 0.2.0
        , http-types >= 0.8.0
  -- hs-source-dirs:
  default-language:    Haskell2010

Test-Suite test-yeller
    type:       exitcode-stdio-1.0
    main-is:    Specs.hs
    build-depends:
          base >= 4.6.0 && < 5
        , text >= 1.1.1.0
        , bytestring >= 0.10.4.0
        , stm
        , containers
        , unordered-containers >= 0.2.3.0
        , aeson >= 0.6.0
        , network >= 2.0
        , http-client >= 0.4.0
        , http-client-tls >= 0.2.0
        , http-types >= 0.8.0
        , hspec == 2.1.2
