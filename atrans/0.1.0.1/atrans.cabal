library
  exposed-modules:       Control.Monad.Backend
  -- other-modules:
  -- other-extensions:
  build-depends:         base >=4.7 && <5
                       , mtl >= 2.2.1
  hs-source-dirs:      src
  default-language:    Haskell2010
