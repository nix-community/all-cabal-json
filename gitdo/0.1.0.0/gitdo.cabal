                     , aeson-lens
                     , base >=4.7 && <4.8
                     , bytestring >= 0.10.4.0
                     , foldl >= 1.0.7
                     , lens >= 4.7
                     , mtl >= 2.1.3.1
                     , optparse-applicative
                     , sqlite-simple
                     , system-filepath >= 0.4.13.2
                     , text >= 1.2.0.4
                     , turtle
                     , wreq

