name:                portager
version:             0.1.0.0
x-revision: 1
synopsis:            DSL for configuring Gentoo portage
description:         Please see README.md
homepage:            https://github.com/j1r1k/portager
license:             BSD3
license-file:        LICENSE
author:              Jiri Marsicek
maintainer:          Jiri Marsicek <jiri.marsicek@gmail.com>
copyright:           2017 Jiri Marsicek
category:            DSL
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Portager
                     , Portager.DSL
                     , Portager.Flatten
                     , Portager.Options
                     , Portager.Writes
  ghc-options:         -Wall -fno-warn-orphans

  build-depends:
        base >=4.9 && <5,
        containers >=0.5.7.1 && <0.6,
        directory >=1.2.6.2 && <1.3,
        filepath >=1.4.1.0 && <1.5,
        lens ==4.14.*,
        mtl >=2.2.1 && <2.3,
        optparse-applicative >=0.12.1.0 && <0.13,
        text >=1.2.2.1 && <1.3,
        transformers >=0.5.2.0 && <0.6

  default-language:    Haskell2010

test-suite portager-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       Portager.DSLSpec
                     , Portager.FlattenSpec
                    
  build-depends:       base
                     , portager
                     , containers
                     , hspec
                     , QuickCheck
                     , mtl
                     , text
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/j1r1k/portager
