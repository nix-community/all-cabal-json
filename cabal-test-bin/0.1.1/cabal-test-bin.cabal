bug-reports:         https://github.com/junjihashimoto/cabal-test-bin/issues

source-repository head
  type:           git
  location:       https://github.com/junjihashimoto/cabal-test-bin.git

executable cabal-test-bin
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , directory
                     , filepath
                     , unix
