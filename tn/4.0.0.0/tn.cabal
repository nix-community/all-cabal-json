name:                tn
version:             4.0.0.0
synopsis:            A simple daily journal program
description:
  tn is a simple program to keep journals.
license:             ISC
license-file:        LICENSE
author:              Peter Harpending
maintainer:          peter@harpending.org
homepage:            https://github.com/pharpend/tn
bug-reports:         https://github.com/pharpend/tn/issues
copyright:           Copyright (c) 2014-2016, Peter Harpending.
category:            Data, Text, Utility
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:
  README.md
  LICENSE

executable tn
  hs-source-dirs:      bin/
  default-language:    Haskell2010
  ghc-options:         -Wall
  main-is:             Main.hs
  other-modules:
    Paths_tn
  default-extensions:
    DeriveGeneric
    LambdaCase
    OverloadedStrings
    TemplateHaskell
  build-depends:     
      base ==4.8.*
    , aeson >=0.10.0.0
    , bytestring
    , directory >=1.2.3.0
    , file-embed
    , optparse-simple
    , pager
    , system-filepath
    , text
    , time
    , turtle
    , vector
    , yaml

test-suite spec
  hs-source-dirs:      spec/
  default-language:    Haskell2010
  ghc-options:         -Wall
  main-is:             Spec.hs
  type:                exitcode-stdio-1.0
  build-depends:
      base ==4.*
    , hspec
    , QuickCheck
    , tn

source-repository head
  type:                git
  location:            https://github.com/pharpend/tn.git
