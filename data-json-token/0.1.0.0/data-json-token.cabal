name:                data-json-token
version:             0.1.0.0
synopsis:            Json Token datatype
description:         Please see README.md
homepage:            http://github.com/haskell-works/data-json-token#readme
license:             BSD3
license-file:        LICENSE
author:              John Ky
maintainer:          newhoggy@gmail.com
copyright:           2010 John Ky
category:            Data, Json
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:       src
  exposed-modules:      Data.Json.Token
  build-depends:        base >= 4.7 && < 5
  default-language:     Haskell2010

executable data-json-token-exe
  hs-source-dirs:       app
  main-is:              Main.hs
  ghc-options:          -threaded -rtsopts -with-rtsopts=-N
  build-depends:        base
                      , data-json-token
  default-language:     Haskell2010

test-suite data-json-token-test
  type:                 exitcode-stdio-1.0
  hs-source-dirs:       test
  main-is:              Spec.hs
  build-depends:        base
                      , data-json-token
  ghc-options:          -threaded -rtsopts -with-rtsopts=-N
  default-language:     Haskell2010

source-repository head
  type:     git
  location: https://github.com/haskell-works/data-json-token
