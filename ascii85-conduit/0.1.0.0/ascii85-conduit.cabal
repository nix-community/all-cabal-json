                     , bytestring ==0.10.*
                     , conduit ==1.0.*

test-suite spec
  default-language:  Haskell2010
  type:              exitcode-stdio-1.0
  main-is:           Spec.hs
  hs-source-dirs:    test
  default-extensions:  Rank2Types
  build-depends:       base ==4.6.*
                     , bytestring ==0.10.*
                     , hspec ==1.8.*
                     , conduit ==1.0.*
                     , ascii85-conduit ==0.1.*

