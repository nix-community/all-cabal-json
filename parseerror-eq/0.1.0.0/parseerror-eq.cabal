  hs-source-dirs: spec, src
  main-is: Spec.hs
  build-depends:       base >=4.5 && <4.8
                       , parsec
                       , hspec

  default-language:    Haskell2010
  ghc-options:         -Wall
  default-extensions:  CPP

source-repository head
  type:     git
  location: git@github.com:stackbuilders/parseerror-eq.git
