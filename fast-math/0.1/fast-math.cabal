license-file:   LICENSE
author:         Liyang HU
maintainer:     fast-math@liyang.hu
copyright:      Â© 2011, Liyang HU
category:       Math, Numeric
build-type:     Simple
cabal-version:  >= 1.2.3

library
    build-depends:
        base >= 3 && < 5
    exposed-modules:
        Numeric.FastMath
        Numeric.FastMath.Infinitesimal
    extensions:
        NoImplicitPrelude
        MagicHash
    ghc-options: -Wall -fno-warn-orphans

