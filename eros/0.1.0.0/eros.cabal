cabal-version:       >=1.10

library
  exposed-modules:
      Text.Eros.Message
      Text.Eros.Phrase
      Text.Eros.Phraselist
  -- other-modules:       
  other-extensions:
      FlexibleInstances
    , OverloadedStrings
  build-depends:
      aeson
    , base >=4.7 && <4.8
    , bytestring
    , containers
    , text
  hs-source-dirs:      src/
  default-language:    Haskell2010

Test-Suite test-phrase
  type: exitcode-stdio-1.0
  hs-source-dirs: test/
  main-is: Main.hs
  other-modules:
    TextErosPhrase
  build-depends:
      base
    , containers
    , eros
    , QuickCheck
    , text

source-repository head
  type:     git
  location: https://github.com/pharpend/eros.git
  branch:   master