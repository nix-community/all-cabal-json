                   , directory >=1.2 && <1.3
                   , filepath >=1.3 && <1.4
                   , mtl >=2.1 && <2.2
                   , old-locale >=1.0 && <1.1
                   , parsec >= 3.1.8
                   , pretty-show
                   , pretty
                   , process >=1.2 && <1.3
                   , random >=1.0 && <1.2
                   , semigroups
                   , syb >= 0.4.4 && <0.5
                   , template
                   , text >= 1.2.0.4
                   , time >=1.4 && <1.5
                   , transformers >=0.3 && <0.4
                   , unordered-containers
                   , vector >= 0.10.12.2
                   , yaml
                   , bifunctors
