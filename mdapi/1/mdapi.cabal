name:                mdapi
version:             1
x-revision: 1
synopsis:            Haskell interface to Fedora's mdapi
description:         Provides access to the <http://apps.fedoraproject.org/mdapi/ Fedora mdapi> API.
homepage:            https://github.com/relrod/mdapi-hs
license:             BSD2
license-file:        LICENSE
author:              Ricky Elrod
maintainer:          relrod@redhat.com
copyright:           (c) 2015 Red Hat, Inc.
category:            Fedora
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:     Fedora.Mdapi.Internal
                     , Fedora.Mdapi.Types
                     , Fedora.Mdapi
  -- other-modules:
  -- other-extensions:
  build-depends:       aeson >= 0.7 && < 1
                     , base >= 4 && < 5
                     , bytestring >= 0.10 && < 1
                     , data-default
                     , lens >= 4 && < 5
                     , lens-aeson >= 1 && < 2
                     , text >= 1 && < 2
                     , transformers >= 0.3 && < 0.5
                     , wreq >= 0.3 && < 0.5
  hs-source-dirs:      src
  default-language:    Haskell2010
