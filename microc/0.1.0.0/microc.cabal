name:                microc
version:             0.1.0.0
synopsis:            microc compiler
description:         microc compiler(stdin->stdout)
homepage:            https://github.com/hurou927/microc-haskell#readme
license:             BSD3
license-file:        LICENSE
author:              hurou927
maintainer:          god.be.with.ye.fs@gmail.com
copyright:           2017 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib, ParseMicroc
  build-depends:       base >= 4.7 && < 5
                      , parsec
  default-language:    Haskell2010

executable microc-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , microc
  default-language:    Haskell2010

test-suite microc-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , microc
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/hurou927/microc-haskell
