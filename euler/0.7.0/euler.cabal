name:                 euler
version:              0.7.0
build-type:           Simple
cabal-version:        >= 1.18
synopsis:             Mathematics utilities for Haskell
description:          Mathematics utilities and functions for Haskell, currently aimed at solving problems in Project Euler.
homepage:             https://github.com/decomputed/euler
license:              MIT
license-file:         LICENSE
author:               Luis Rodrigues Soares
maintainer:           luis@decomputed.com
stability:            alpha
bug-reports:          https://github.com/decomputed/euler/issues
category:             Math
extra-source-files:   README.md changelog.md

library
  default-language:   Haskell2010
  exposed-modules:    Numeric.Euler.Primes
  ghc-options:        -Wall
  hs-source-dirs:     src
  build-depends:      base == 4.7.*

test-suite spec
  default-language:   Haskell2010
  ghc-options:        -Wall -fhpc
  hs-source-dirs:     test, src
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  build-depends:      base == 4.7.*,
                      euler == 0.7.*,
                      hspec == 2.1.*

test-suite hpc
  ghc-options:        -Wall
  default-language:   Haskell2010
  hs-source-dirs:     test
  main-is:            HPC.hs
  type:               exitcode-stdio-1.0
  build-depends:      base == 4.7.*,
                      process == 1.2.*,
                      xml == 1.3.*,
                      directory == 1.2.*

test-suite hlint
  ghc-options:        -Wall
  default-language:   Haskell2010
  hs-source-dirs:     test
  main-is:            HLint.hs
  type:               exitcode-stdio-1.0
  build-tools:        happy == 1.19.*
  build-depends:      base == 4.7.*,
                      hlint == 1.9.*

test-suite haddock
  ghc-options:        -Wall
  default-language:   Haskell2010
  hs-source-dirs:     test
  main-is:            haddock.hs
  type:               exitcode-stdio-1.0
  build-depends:      base == 4.7.*,
                      process == 1.2.*,
                      regex-posix == 0.95.*

benchmark criterion
  ghc-options:        -Wall
  default-language:   Haskell2010
  hs-source-dirs:     benchmark
  main-is:            Benchmark.hs
  type:               exitcode-stdio-1.0
  build-depends:      base == 4.7.*,
                      euler == 0.7.*,
                      criterion == 1.0.2.*

source-repository head
  type:               git
  location:           https://github.com/decomputed/euler