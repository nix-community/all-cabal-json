  type: git
  location: git://github.com/ekmett/bifunctors.git

library
  hs-source-dirs: src
  build-depends:
    base          >= 4.0 && < 4.8,
    semigroups    >= 0.8.3.1 && < 0.9,
    semigroupoids == 3.0.*

