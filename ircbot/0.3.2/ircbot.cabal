                  containers == 0.4.*,
                  directory   < 1.2,
                  filepath   >= 1.2 && < 1.4,
                  irc        == 0.5.*,
                  mtl        == 2.0.*,
                  network    == 2.3.*,
                  old-locale == 1.0.*,
                  parsec     == 3.1.*,
                  time       == 1.4.*,
                  unix       >= 2.4 && < 2.6,
                  random     == 1.0.*,
                  stm        == 2.2.*
