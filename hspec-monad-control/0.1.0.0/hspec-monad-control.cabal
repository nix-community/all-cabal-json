name:                hspec-monad-control
version:             0.1.0.0
synopsis:            Orphan instances of MonadBase and MonadBaseControl for SpecM
description:         Orphan instances of MonadBase and MonadBaseControl for SpecM
stability:           alpha
license:             BSD3
license-file:        LICENSE
author:              Ben James
maintainer:          bmjames@gmail.com
copyright:           Ben James, 2015
category:            Control
build-type:          Simple
cabal-version:       >=1.10
bug-reports:         https://github.com/bmjames/hspec-monad-control/issues

source-repository head
  type:                git
  location:            https://github.com/bmjames/hspec-monad-control.git

library
  exposed-modules:     Test.Hspec.Control
  other-extensions:    MultiParamTypeClasses, TypeFamilies
  build-depends:       base >=4.7 && <4.9
                     , hspec-core >=2.0 && <3
                     , monad-control >=1.0 && <2
                     , transformers >=0.2 && <0.5
                     , transformers-base >=0.4.2 && <0.5
  default-language:    Haskell2010
