Exposed-modules: Text.LaTeX
               , Text.LaTeX.IO
               , Text.LaTeX.Macro
               , Text.LaTeX.Commands
               , Text.LaTeX.Packages
               , Text.LaTeX.Arguments
               , Text.LaTeX.Define
               , Text.LaTeX.Monad
               , Text.LaTeX.Result