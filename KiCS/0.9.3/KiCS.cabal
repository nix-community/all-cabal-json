Name:          KiCS
Version:       0.9.3
Cabal-Version: >= 1.8
Author:        Bernd Braßel
Maintainer:    Björn Peemöller
Homepage:      http://www.curry-language.org
License:       OtherLicense
License-File:  LICENSE
Category:      Compiler
build-type:    Custom
Synopsis:      A compiler from Curry to Haskell
Description:   This package builds the Curry to Haskell compiler "kics".
               This package also includes many Curry libraries.
               Have a look at the list of modules "Curry.Module.*"
Stability:     experimental

extra-source-files:
   src/lib/Curry/Module/*.hs.include
extra-tmp-files:
   src/lib/Curry/Module/*.fcy
   src/lib/Curry/Module/*.fint
   src/lib/Curry/Module/*.efc
   src/lib/Curry/Module/*.acy
   src/lib/Curry/Module/*.uacy
   src/lib/Curry/Module/*.cy
Data-Dir:      src/lib/
Data-Files:    Curry/Module/*.fcy
               Curry/Module/*.fint
               Curry/Module/*.efc
               Curry/Module/*.acy
               Curry/Module/*.uacy
               Curry/Module/*.cy
               debugOptions.hs

Executable kics
  main-is:        kics.hs
  hs-source-dirs: src
  Build-Depends:
      base == 4.*
    , containers
    , directory
    , filepath
    , ghc-paths
    , old-time
    , process
    , curry-base     >= 0.2.9  && < 0.3
    , curry-frontend >= 0.2.12 && < 0.3
  Other-Modules:
    Curry.Compiler.Config
    Curry.Compiler.CurryToHaskell
    Curry.Compiler.SafeCalls
    Curry.Compiler.Names
    Curry.Compiler.ShowFlatCurry
    Curry.Compiler.KicsSubdir
    Curry.Compiler.FunctionalProg
    Curry.Compiler.ShowFunctionalProg
    Curry.Compiler.PreTrans
    Curry.Compiler.Simplification
    Curry.Compiler.Brace

Executable kicsi
  main-is:        kicsi.hs
  hs-source-dirs: src
  Build-Depends:
      base           == 4.*
    , containers
    , directory
    , filepath
    , ghc-paths
    , old-time
    , process
    , readline
    , curry-base     >= 0.2.9  && < 0.3
    , curry-frontend >= 0.2.12 && < 0.3

Library
  hs-source-dirs: src, src/lib
  Build-Tools: kics
  Build-Depends:
      base == 4.*
    , containers
    , directory
    , filepath
    , network
    , old-time
    , process
    , random
    , syb
    , unix
    , curry-frontend >= 0.2.12 && < 0.3

