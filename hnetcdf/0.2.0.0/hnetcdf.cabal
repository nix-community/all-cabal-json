                       base                        >= 4.3      && < 5,
                       containers                  >= 0.4      && < 0.6,
                       vector                      >= 0.9      && < 0.11,
                       repa,
                       directory                   >= 1.1      && < 1.3,
                       test-framework              >= 0.3,
