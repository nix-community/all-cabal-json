name:                shakespeare-sass
version:             0.1.0.2
synopsis:            SASS support for Shakespeare and Yesod
description:         SASS support for Shakespeare and Yesod
homepage:            https://github.com/brcha/shakespeare-sass
license:             MPL-2.0
license-file:        LICENSE
author:              Filip Brcic
maintainer:          brcha@gna.org
-- copyright:
category:            Web
build-type:          Simple
extra-source-files:
				README.md
cabal-version:       >=1.10
source-repository head
  type:      git
  location:  https://github.com/brcha/shakespeare-sass

library
  exposed-modules:
        Text.Shakespeare.Sass
  default-extensions:
        TemplateHaskell
        QuasiQuotes
  build-depends:
          base                  >= 4        && < 5
        , template-haskell
        , yesod                 >= 1.4.1    && < 1.5.0
        , yesod-core            >= 1.4.6    && < 1.5.0
        , shakespeare           >= 2.0      && < 2.1
        , hsass                 >= 0.4.0    && < 0.5.0
        , hlibsass              >= 0.1.5.0  && < 0.2.0.0
  hs-source-dirs:      src
  default-language:    Haskell2010
