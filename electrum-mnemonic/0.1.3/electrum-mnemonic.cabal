  location: git://git.joeyh.name/electrum-mnemonic.git

Library
  ghc-Options: -Wall -fno-warn-tabs
  Build-Depends: base (< 5)
  Exposed-Modules:
    Data.Mnemonic.Electrum
    Data.Mnemonic.Electrum.Types
    Data.Mnemonic.Electrum.WordList.Poetic

Test-suite test
