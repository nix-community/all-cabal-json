    HsQML sample programs

Executable hsqml-factorial1
    Default-language: Haskell2010
    Hs-source-dirs: src
    Main-is: Factorial1.hs
    Build-depends:
        base       == 4.*,
        text       >= 0.11 && < 1.2,
        hsqml      == 0.3.*
    GHC-options: -threaded

Executable hsqml-factorial2
    Default-language: Haskell2010
    Hs-source-dirs: src
