name:                hwall-auth-iitk
version:             0.1.0.0
synopsis:            Initial version of firewall Authentication for IITK network.
description:         Firewall Authentication script for IITK network in haskell.
license:             BSD3
license-file:        LICENSE
author:              satvikc
maintainer:          satvikc@iitk.ac.in
category:            Network
build-type:          Simple
extra-source-files:  README
cabal-version:       >=1.10

executable firewall-auth
  main-is:             Main.hs
  ghc-options:         -threaded
  Hs-source-dirs:      src
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.6 && <4.9,
                       bytestring,
                       haskeline,
                       http-conduit,
                       http-types,
                       mtl,
                       regex-compat >=0.95,
                       unix
  -- hs-source-dirs:
  default-language:    Haskell2010