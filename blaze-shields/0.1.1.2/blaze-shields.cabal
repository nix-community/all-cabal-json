name: blaze-shields
version: 0.1.1.2
synopsis: create svg by Haskell
description: a Haskell version of shields ,which is on github.
homepage: http://githubcom/Qinka/blaze-shields
bug-reports: https://github.com/Qinka/blaze-shields/issues
license:  BSD3
license-file: LICENSE
author:	Qinka
maintainer: qinka@live.com
category: Web
build-type: Simple
cabal-version: >= 1.12

library
    exposed-modules:
      Text.Blaze.Svg.Shields
      Text.Blaze.Svg.Shields.Url
    build-depends:
      base >= 4    && < 5,
      blaze-markup >= 0.7 && < 1,
      blaze-html >= 0.8 && <1,
      blaze-svg >=0.3 && < 0.6,
      text >=1.2 && <1.6
    default-language: Haskell2010
    hs-source-dirs:lib
    ghc-options: -Wall
