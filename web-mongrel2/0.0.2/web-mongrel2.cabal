name: web-mongrel2
version: 0.0.2
build-type: Simple
license: BSD3
license-file: LICENSE
maintainer: Clint Moore <cmoore@wamboli.com>

build-depends:
 base >= 3 && <= 5,
 bytestring -any,
 data-default -any,
 json -any,
 parsec -any,
 system-uuid -any,
 mtl >= 2,
 old-time,
 haskell98,
 zeromq-haskell == 0.4.1,
 template-haskell -any,
 HStringTemplate

stability: unstable
homepage: http://github.com/cmoore/haskell-mongrel2
synopsis: Bindings for the Mongrel2 web server.
description: web-mongrel2 helps you write handlers for different frameworks.
category: Web
author: Clint Moore
exposed-modules:
        Web.Mongrel2,
        Web.Mongrel2.QQ,
        Web.Mongrel2.Types,
        Web.Mongrel2.Parsing
exposed: True
buildable: True
ghc-options: -Wall
hs-source-dirs: src
