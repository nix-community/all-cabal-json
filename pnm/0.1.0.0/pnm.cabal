license-file:        LICENSE
author:              Claude Heiland-Allen
maintainer:          claude@mathr.co.uk
category:            Graphics
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:     Codec.PNM, Codec.PNM.Parse
  build-depends:       base < 5, bytestring

