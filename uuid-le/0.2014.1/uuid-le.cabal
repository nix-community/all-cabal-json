category:           Data
build-type:         Simple
cabal-version:      >=1.10

library
    exposed-modules:
        Data.UUID.LittleEndian
    build-depends:
        base >=4 && <5,
        bytestring >=0.10 && <1,
        uuid >= 1.2.2 && <2
    hs-source-dirs:      src
    default-language:    Haskell2010
