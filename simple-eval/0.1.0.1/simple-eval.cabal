cabal-version:       >=1.10


library
  -- Modules exported by the library.
  exposed-modules:     Language.Eval
  
  -- Modules included in this library but not exported.
  -- other-modules:       
  
  -- LANGUAGE extensions used by modules in this package.
  other-extensions:    OverloadedStrings, NoMonomorphismRestriction, FlexibleContexts
  
  -- Other library packages from which modules are imported.
  build-depends:       base >=4.6 && <4.8, text >=0.11, parsec >=3.1, transformers >=0.3
  
  -- Directories containing source files.
  hs-source-dirs:      .
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  
Executable Eval
  main-is: Eval.hs
  hs-source-dirs: example
  default-language:    Haskell2010
  -- GHC-Options: -O
  build-depends:       base >=4.6 && <4.8, simple-eval >=0.1, text >=0.11
