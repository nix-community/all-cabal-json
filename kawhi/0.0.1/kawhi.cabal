name: kawhi
version: 0.0.1
x-revision: 1
synopsis: stats.NBA.com library
description: Functions and types for interacting with stats.NBA.com
homepage: https://github.com/hamsterdam/kawhi
license: MIT
license-file: LICENSE
author: Aaron Taylor
maintainer: aaron@hamsterdam.co
category: API
build-type: Simple
cabal-version: >=1.10

library
  hs-source-dirs: library
  exposed-modules:
    Control.Monad.Http
    NBA.Stats
  other-modules:
  build-depends:
    base >= 4.8 && < 5,
    aeson >= 0.11,
    bytestring >= 0.10,
    exceptions >= 0.8,
    http-conduit >= 2.1,
    http-client >= 0.4 && < 0.5,
    http-types >= 0.9,
    mtl >= 2.2,
    safe >= 0.3,
    scientific >= 0.3,
    text >= 1.2
  ghc-options: -Wall
  default-language: Haskell2010

test-suite tests
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Tests.hs
  other-modules: NBA.Stats.Tests
  build-depends:
    base,
    kawhi,
    aeson,
    bytestring,
    exceptions,
    http-client,
    http-types,
    mtl,
    scientific,
    smallcheck,
    tasty,
    tasty-hunit,
    tasty-quickcheck,
    tasty-smallcheck,
    text
  ghc-options: -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language: Haskell2010

source-repository head
  type: git
  location: https://github.com/hamsterdam/kawhi
