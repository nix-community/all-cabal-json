library
  ghc-options:   -Wall
  exposed-modules:     
    Database.MongoDB.Queue

  extensions:
    OverloadedStrings

  -- other-modules:       
  build-depends:
      base > 4.5 && < 5
    , mongoDB
    , transformers
    , monad-control
    , text
    , network

test-suite test
