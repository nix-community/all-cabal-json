                       containers >= 0.4 && < 1,
                       deepseq >= 1.1 && < 2,
                       array >= 0.3 && < 1,
                       time >= 1.1 && < 2,
                       parallel >= 3.1 && < 4,
                       Etage >= 0.1.11 && < 0.2,
                       Etage-Graph == 0.1.7

  GHC-options:         -Wall -rtsopts -threaded
