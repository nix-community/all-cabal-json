  other-extensions:    DeriveGeneric, DeriveAnyClass, PatternGuards
  build-depends:       base >=4.9 && <4.10, ghc >= 8.0 && <8.1, ghci >=8.0 && <8.1, derive-storable 
  hs-source-dirs:      src
  default-language:    Haskell2010
