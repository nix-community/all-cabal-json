      base >=4 && <5
    , containers
  
  -- Directories containing source files.
  hs-source-dirs:      src
  
  -- Base language which the package is written in.
  default-language:    Haskell2010
  
source-repository head
  type: git
  location: git@github.com:arowM/interchangeable.git
