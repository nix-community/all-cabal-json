  other-modules:       Data.Hash.SL2
                       Data.Hash.SL2.Mutable
                       Data.Hash.SL2.Unsafe
                       Data.Hash.SL2.Internal
  build-depends:       base >=4.7 && <4.8,
                       Cabal >=1.9.2,
                       bytestring >=0.10 && <0.11,
