          base ==4.*
        , bytestring ==0.10.*
        , explicit-exception ==0.1.*
        , parsec >= 3.1.2 && < 3.2
        , pcre-light ==0.4.*
        , regex-base ==0.93.*
        , regex-tdfa ==1.1.*
        , text ==0.11.*
        , time ==1.4.*


    Exposed-modules:
        Text.Matchers

    ghc-options: -Wall
