    base >= 4 && < 4.5,
    stm >= 2.1.2 && <= 2.2,
    speculation >= 1.0.0 && < 1.1,
    transformers >= 0.2.0 && < 0.3

  exposed-modules:
    Control.Monad.Trans.Cont.Speculation

  ghc-options: -Wall 
