name:               data-lens
category:           Control, Comonads
version:            2.10.1
license:            BSD3
cabal-version:      >= 1.6
license-file:       LICENSE
author:             Russell O'Connor, Edward A. Kmett & Tony Morris
maintainer:         Russell O'Connor <roconnor@theorem.ca>
stability:          provisional
homepage:           http://github.com/roconnor/data-lens/
copyright:          Copyright (C) 2008-2012 Edward A. Kmett, Russell O'Connor & Tony Morris
synopsis:           Haskell 98 Lenses
description:        Haskell 98 Lenses
build-type:         Simple
extra-source-files: CHANGELOG

source-repository head
  type: git
  location: git://github.com/roconnor/data-lens.git

flag DeriveDataTypeable
  manual: False
  default: True

library
  build-depends:
    base                 >= 4       && < 5,
    comonad              >= 1.1.1.3 && < 3.1,
    comonad-transformers >= 2.0     && < 2.2,
    containers           >= 0.3     && < 0.5,
    semigroupoids        >= 1.2.4   && < 1.4,
    transformers         >= 0.2.0   && < 0.4

  if flag(DeriveDataTypeable)
    extensions: DeriveDataTypeable
    cpp-options: -DLANGUAGE_DeriveDataTypeable

  extensions: CPP

  exposed-modules:
    Data.Lens.Common
    Data.Lens.Lazy
    Data.Lens.Strict
    Data.Lens.Partial.Common
    Data.Lens.Partial.Lazy
    -- Data.Lens.Partial.Strict
    Control.Category.Product

  ghc-options:      -Wall

  hs-source-dirs:
                    src

